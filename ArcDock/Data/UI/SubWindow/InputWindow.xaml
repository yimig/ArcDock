<Window x:Class="ArcDock.Data.UI.SubWindow.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcDock.Data.UI.SubWindow"
        mc:Ignorable="d"
        Icon="/ArcDock;component/Icon/rename.ico"
        Title="新增修改数据" Height="80" Width="400" Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <DockPanel>
            <Button Name="BtnCheck" Width="70" DockPanel.Dock="Right" Margin="5" Click="BtnCheck_Click">
                <StackPanel Orientation="Horizontal" Margin="2" VerticalAlignment="Center">
                    <Image Source="/ArcDock;component/Icon/yes.ico" Margin="0 0 5 0"></Image>
                    <TextBlock VerticalAlignment="Center">确认</TextBlock>
                </StackPanel>
            </Button>
            <TextBox Margin="5" VerticalContentAlignment="Center" Text="{Binding Path=Data}"></TextBox>
        </DockPanel>
    </Grid>
</Window>
