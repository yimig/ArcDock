<Window x:Class="ArcDock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcDock"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Icon="Icon/tag.ico"
        Title="ArcDock" Height="450" Width="1000">
    <Grid>
        <DockPanel>
            <Menu Height="20" Background="LightGray" DockPanel.Dock="Top">
                <MenuItem Header="文件">
                    
                </MenuItem>
                <MenuItem Header="设置">

                </MenuItem>
                <MenuItem Header="关于">

                </MenuItem>
            </Menu>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <DockPanel>
                    <DockPanel Height="30" DockPanel.Dock="Top">
                        <ToolBar DockPanel.Dock="right">
                            <Label>切换模板：</Label>
                            <ComboBox Width="200">
                                <ComboBoxItem>template1.html</ComboBoxItem>
                                <ComboBoxItem>template2.html</ComboBoxItem>
                            </ComboBox>
                        </ToolBar>
                        <ToolBar>
                            <Button ToolTip="新建">
                                <Image Source="Icon/addnew.ico"></Image>
                            </Button>
                            <Button ToolTip="查看历史">
                                <Image Source="Icon/search.ico"></Image>
                            </Button>
                            <Button ToolTip="打印" Click="BtnPrint_OnClick">
                                <Image Source="Icon/printer.ico"></Image>
                            </Button>
                            <Button ToolTip="批量打印">
                                <Image Source="Icon/mulitiprinter.ico"></Image>
                            </Button>
                        </ToolBar>
                    </DockPanel>
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Height="26" Margin="10 2 5 2" Name="btnPrint">新建</Button>
                        <Button Height="26" Margin="5 2 10 2" Name="btnNew" Click="BtnPrint_OnClick" Grid.Column="1">打印</Button>
                    </Grid>
                    <StackPanel Orientation="Vertical" Name="StMain" Margin="10"></StackPanel>
                </DockPanel>
                <Grid Grid.Column="1" Background="LightSteelBlue">
                    <Grid Name="GdBrowser">
                        <Border BorderBrush="Crimson" BorderThickness="2">
                            <wpf:ChromiumWebBrowser Name="Browser"></wpf:ChromiumWebBrowser>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </DockPanel>
        
    </Grid>
</Window>
