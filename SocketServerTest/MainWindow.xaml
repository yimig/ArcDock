<Window x:Class="SocketServerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketServerTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button x:Name="BtnStart" Click="BtnStart_Click" Margin="3">启动</Button>
                <Button x:Name="BtnStop" Click="BtnStop_Click" Margin="3">中止</Button>
            </StackPanel>
            <TextBox Name="TbConsole"></TextBox>
        </DockPanel>
    </Grid>
</Window>
